generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  USER
  RECRUITER
}

enum ExperienceType {
  WORK
  EDUCATION
  PROJECT
  OTHER
}

enum FragmentType {
  ACHIEVEMENT
  ACTION
  CHALLENGE
  LEARNING
  VALUE
  EMOTION
  FACT
  SKILL_USAGE
}

enum SourceType {
  CONVERSATION
  DOCUMENT
  MANUAL
}

enum AgentStatus {
  PRIVATE
  PUBLIC
}

enum SessionType {
  USER_AI_CHAT
  RECRUITER_AGENT_CHAT
}

enum SenderType {
  USER
  RECRUITER
  AI
}

enum RefType {
  DOCUMENT
  FRAGMENT
  AGENT
}

enum TagCategory {
  SKILL
  DOMAIN
  ATTRIBUTE
  ROLE
}

enum TaggableType {
  DOCUMENT
  FRAGMENT
  AGENT_PROFILE
}

model Account {
  id           String      @id @default(uuid())
  email        String      @unique
  passwordHash String
  accountType  AccountType
  createdAt    DateTime    @default(now())

  user              User?
  recruiter         Recruiter?
  invites           Invite[]    @relation("InviteSender")
  invitedRecruiters Recruiter[] @relation("RecruiterInviter")
}

model User {
  id        String  @id @default(uuid())
  accountId String  @unique
  account   Account @relation(fields: [accountId], references: [id])
  name       String
  email      String? // 連絡先開示用
  phone      String? // 連絡先開示用
  avatarPath String?

  documents        Document[]
  experiences      Experience[]
  fragments        Fragment[]
  agent            AgentProfile?
  sessions         Session[]
  receivedInterests Interest[]
  receivedMessages DirectMessage[] @relation("ReceivedMessages")
  companyAccesses  CompanyAccess[]
}

model Recruiter {
  id                 String              @id @default(uuid())
  accountId          String              @unique
  account            Account             @relation(fields: [accountId], references: [id])
  companyId          String
  company            Company             @relation(fields: [companyId], references: [id])
  role               CompanyRole         @default(MEMBER)
  status             CompanyMemberStatus @default(ACTIVE)
  invitedByAccountId String?
  invitedBy          Account?            @relation("RecruiterInviter", fields: [invitedByAccountId], references: [id])
  joinedAt           DateTime?           @default(now())
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  sessions          Session[]
  notes             InterviewNote[]
  evaluations       InterviewEvaluation[]
  jobPostings       JobPosting[]
  watches           CandidateWatch[]
  pipelines         CandidatePipeline[]
  interests         Interest[]
  sentMessages      DirectMessage[]   @relation("SentMessages")

  @@index([companyId])
}

model Company {
  id                 String    @id @default(uuid())
  name               String
  slug               String    @unique
  createdByAccountId String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  recruiters        Recruiter[]
  invites           Invite[]
  subscription      Subscription?
  pointTransactions PointTransaction[]
  candidateAccesses CompanyAccess[]

  @@index([slug])
}

model Invite {
  id                 String       @id @default(uuid())
  token              String       @unique
  companyId          String
  company            Company      @relation(fields: [companyId], references: [id])
  email              String
  role               CompanyRole
  status             InviteStatus @default(PENDING)
  expiresAt          DateTime
  invitedByAccountId String
  invitedBy          Account      @relation("InviteSender", fields: [invitedByAccountId], references: [id])
  usedAccountId      String?
  usedAt             DateTime?
  createdAt          DateTime     @default(now())

  @@index([companyId, status])
  @@index([email])
}

model Document {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  fileName  String
  filePath  String
  summary   String?
  createdAt DateTime @default(now())
}

model Experience {
  id           String         @id @default(uuid())
  userId       String
  user         User           @relation(fields: [userId], references: [id])
  type         ExperienceType
  title        String
  organization String?
  role         String?
  periodStart  DateTime?
  periodEnd    DateTime?
  summary      String?
  createdAt    DateTime       @default(now())

  fragments Fragment[]
}

model Fragment {
  id           String       @id @default(uuid())
  userId       String
  user         User         @relation(fields: [userId], references: [id])
  experienceId String?
  experience   Experience?  @relation(fields: [experienceId], references: [id])
  parentId     String?
  parent       Fragment?    @relation("FragmentHierarchy", fields: [parentId], references: [id])
  children     Fragment[]   @relation("FragmentHierarchy")
  depth        Int          @default(0)
  type         FragmentType
  content      String
  metadata     Json?
  skills       String[]
  keywords     String[]
  sourceType   SourceType
  sourceId     String?
  confidence   Float        @default(1.0)
  createdAt    DateTime     @default(now())
}

model AgentProfile {
  id           String      @id @default(uuid())
  userId       String      @unique
  user         User        @relation(fields: [userId], references: [id])
  systemPrompt String
  status       AgentStatus @default(PRIVATE)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  sessions           Session[]
  matches            CandidateMatch[]
  watchNotifications WatchNotification[]
  pipelines          CandidatePipeline[]
}

model Session {
  id          String        @id @default(uuid())
  sessionType SessionType
  userId      String?
  user        User?         @relation(fields: [userId], references: [id])
  recruiterId String?
  recruiter   Recruiter?    @relation(fields: [recruiterId], references: [id])
  agentId     String?
  agent       AgentProfile? @relation(fields: [agentId], references: [id])
  createdAt   DateTime      @default(now())

  messages   Message[]
  notes      InterviewNote[]
  evaluation InterviewEvaluation?
}

model Message {
  id         String     @id @default(uuid())
  sessionId  String
  session    Session    @relation(fields: [sessionId], references: [id])
  senderType SenderType
  senderId   String?
  content    String
  createdAt  DateTime   @default(now())

  references MessageReference[]
}

model MessageReference {
  id        String  @id @default(uuid())
  messageId String
  message   Message @relation(fields: [messageId], references: [id])
  refType   RefType
  refId     String
}

model Tag {
  id        String      @id @default(uuid())
  name      String      @unique
  category  TagCategory
  parentId  String?
  parent    Tag?        @relation("TagHierarchy", fields: [parentId], references: [id])
  children  Tag[]       @relation("TagHierarchy")
  aliases   String[]
  createdAt DateTime    @default(now())

  taggings Tagging[]
}

model Tagging {
  id           String       @id @default(uuid())
  tagId        String
  tag          Tag          @relation(fields: [tagId], references: [id])
  taggableType TaggableType
  taggableId   String
  confidence   Float        @default(1.0)
  createdAt    DateTime     @default(now())

  @@unique([tagId, taggableType, taggableId])
}

model InterviewNote {
  id          String    @id @default(uuid())
  sessionId   String
  session     Session   @relation(fields: [sessionId], references: [id])
  recruiterId String
  recruiter   Recruiter @relation(fields: [recruiterId], references: [id])
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model InterviewEvaluation {
  id              String    @id @default(uuid())
  sessionId       String    @unique
  session         Session   @relation(fields: [sessionId], references: [id])
  recruiterId     String
  recruiter       Recruiter @relation(fields: [recruiterId], references: [id])
  overallRating   Int       // 1-5
  technicalRating Int       // 1-5
  communicationRating Int   // 1-5
  cultureRating   Int       // 1-5
  matchScore      Float?    // AIによるマッチ度スコア
  comment         String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// ==========================================
// 求人管理
// ==========================================

enum JobStatus {
  DRAFT
  ACTIVE
  PAUSED
  CLOSED
}

enum EmploymentType {
  FULL_TIME
  CONTRACT
  PART_TIME
  INTERNSHIP
  FREELANCE
}

enum ExperienceLevel {
  ENTRY
  JUNIOR
  MID
  SENIOR
  LEAD
}

model JobPosting {
  id              String          @id @default(uuid())
  recruiterId     String
  recruiter       Recruiter       @relation(fields: [recruiterId], references: [id])
  title           String
  description     String
  requirements    String?
  preferredSkills String?
  skills          String[]
  keywords        String[]
  employmentType  EmploymentType
  experienceLevel ExperienceLevel
  location        String?
  salaryMin       Int?
  salaryMax       Int?
  isRemote        Boolean         @default(false)
  status          JobStatus       @default(DRAFT)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  matches   CandidateMatch[]
  pipelines CandidatePipeline[]
  watches   CandidateWatch[]
}

// ==========================================
// マッチング
// ==========================================

model CandidateMatch {
  id           String       @id @default(uuid())
  jobId        String
  job          JobPosting   @relation(fields: [jobId], references: [id], onDelete: Cascade)
  agentId      String
  agent        AgentProfile @relation(fields: [agentId], references: [id], onDelete: Cascade)
  score        Float
  scoreDetails Json?
  calculatedAt DateTime     @default(now())

  @@unique([jobId, agentId])
  @@index([jobId, score(sort: Desc)])
}

// ==========================================
// ウォッチリスト
// ==========================================

model CandidateWatch {
  id              String           @id @default(uuid())
  recruiterId     String
  recruiter       Recruiter        @relation(fields: [recruiterId], references: [id])
  jobId           String?
  job             JobPosting?      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  name            String
  skills          String[]
  keywords        String[]
  experienceLevel ExperienceLevel?
  locationPref    String?
  salaryMin       Int?
  isActive        Boolean          @default(true)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  notifications WatchNotification[]

  @@index([recruiterId, isActive])
}

model WatchNotification {
  id         String         @id @default(uuid())
  watchId    String
  watch      CandidateWatch @relation(fields: [watchId], references: [id], onDelete: Cascade)
  agentId    String
  agent      AgentProfile   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  matchScore Float
  isRead     Boolean        @default(false)
  createdAt  DateTime       @default(now())

  @@unique([watchId, agentId])
  @@index([watchId, isRead, createdAt])
}

// ==========================================
// 採用パイプライン
// ==========================================

enum PipelineStage {
  INTERESTED
  CONTACTED
  SCREENING
  INTERVIEWING
  OFFER
  HIRED
  REJECTED
  WITHDRAWN
}

model CandidatePipeline {
  id          String        @id @default(uuid())
  recruiterId String
  recruiter   Recruiter     @relation(fields: [recruiterId], references: [id])
  agentId     String
  agent       AgentProfile  @relation(fields: [agentId], references: [id], onDelete: Cascade)
  jobId       String?
  job         JobPosting?   @relation(fields: [jobId], references: [id], onDelete: SetNull)
  stage       PipelineStage @default(INTERESTED)
  note        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  history PipelineHistory[]

  @@unique([recruiterId, agentId, jobId])
  @@index([recruiterId, stage])
}

model PipelineHistory {
  id         String            @id @default(uuid())
  pipelineId String
  pipeline   CandidatePipeline @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  fromStage  PipelineStage?
  toStage    PipelineStage
  note       String?
  createdAt  DateTime          @default(now())
}

// ==========================================
// 通知
// ==========================================

enum NotificationType {
  NEW_CANDIDATE_MATCH
  PIPELINE_UPDATE
  SYSTEM
}

model Notification {
  id        String           @id @default(uuid())
  accountId String
  type      NotificationType
  title     String
  body      String
  data      Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([accountId, isRead, createdAt])
}

// ==========================================
// 課金・ポイントシステム
// ==========================================

enum PlanType {
  LIGHT
  STANDARD
  ENTERPRISE
}

enum CompanyRole {
  OWNER
  ADMIN
  MEMBER
}

enum CompanyMemberStatus {
  ACTIVE
  INVITED
  DISABLED
}

enum InviteStatus {
  PENDING
  USED
  REVOKED
  EXPIRED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
}

enum CompanyAccessStatus {
  ALLOW
  DENY
}

enum PointTransactionType {
  GRANT           // 月額プランによる付与
  CONSUME         // アクションによる消費
  PURCHASE        // 追加購入
  EXPIRE          // 期限切れ
  REFUND          // 返還
}

enum PointAction {
  CONVERSATION         // エージェント会話（1pt）
  CONTACT_DISCLOSURE   // 連絡先開示（10pt）
  MESSAGE_SEND         // メッセージ送信（3pt）
}

model Subscription {
  id                   String             @id @default(uuid())
  companyId            String             @unique
  company              Company            @relation(fields: [companyId], references: [id])
  planType             PlanType
  pointBalance         Int                @default(0)
  pointsIncluded       Int                // プランに含まれるポイント数
  status               SubscriptionStatus @default(ACTIVE)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  billingCycleStart    DateTime           @default(now())
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@index([companyId])
}

model PointTransaction {
  id          String               @id @default(uuid())
  companyId   String
  company     Company              @relation(fields: [companyId], references: [id])
  type        PointTransactionType
  action      PointAction?         // CONSUMEの場合のみ
  amount      Int                  // 正: 増加, 負: 減少
  balance     Int                  // 取引後の残高
  relatedId   String?              // 関連するエンティティID
  description String?
  createdAt   DateTime             @default(now())

  @@index([companyId, createdAt])
}

// ==========================================
// 興味表明・連絡先開示
// ==========================================

enum InterestStatus {
  EXPRESSED           // 興味表明済み
  CONTACT_REQUESTED   // 連絡先開示リクエスト済み
  CONTACT_DISCLOSED   // 連絡先開示済み
  DECLINED            // 辞退
}

model Interest {
  id          String         @id @default(uuid())
  recruiterId String
  recruiter   Recruiter      @relation(fields: [recruiterId], references: [id])
  userId      String
  user        User           @relation(fields: [userId], references: [id])
  agentId     String         // 興味を持ったエージェント
  status      InterestStatus @default(EXPRESSED)
  message     String?        // 興味表明時のメッセージ
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  directMessages DirectMessage[]

  @@unique([recruiterId, userId])
  @@index([userId, status])
  @@index([recruiterId, status])
}

model CompanyAccess {
  id          String              @id @default(uuid())
  userId      String
  user        User                @relation(fields: [userId], references: [id])
  companyId   String
  company     Company             @relation(fields: [companyId], references: [id])
  status      CompanyAccessStatus
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@unique([userId, companyId])
  @@index([userId])
  @@index([companyId])
}

model DirectMessage {
  id          String    @id @default(uuid())
  interestId  String
  interest    Interest  @relation(fields: [interestId], references: [id])
  senderId    String
  senderType  SenderType
  recruiterId String?
  recruiter   Recruiter? @relation("SentMessages", fields: [recruiterId], references: [id])
  userId      String?
  user        User?      @relation("ReceivedMessages", fields: [userId], references: [id])
  content     String
  createdAt   DateTime  @default(now())

  @@index([interestId, createdAt])
}
